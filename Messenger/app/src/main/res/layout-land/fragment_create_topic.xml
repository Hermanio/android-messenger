<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="@string/hint_topic_name"
        android:inputType="textPersonName"
        android:text="@string/enter_topic_name" />


    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_marginEnd="17dp"
        android:src="@drawable/placeholder" />

    <Button
        android:id="@+id/chooseImageFromCameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profileImageView"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/editText"
        android:onClick="chooseImageFromCamera"
        android:text="Choose image from camera" />

    <Button
        android:id="@+id/chooseImageFromGalleryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/chooseImageFromCameraButton"
        android:layout_alignStart="@+id/chooseImageFromCameraButton"
        android:layout_below="@+id/chooseImageFromCameraButton"
        android:layout_marginTop="15dp"
        android:onClick="chooseImageFromGallery"
        android:text="Choose image from gallery" />

    <Button
        android:id="@+id/button_add_new_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileImageView"
        android:layout_alignEnd="@+id/chooseImageFromGalleryButton"
        android:layout_alignStart="@+id/chooseImageFromGalleryButton"
        android:text="Add new topic" />
</RelativeLayout>






