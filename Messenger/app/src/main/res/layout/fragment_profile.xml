<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ee.ounapuu.herman.messenger.fragment.ProfileViewFragment"
    android:configChanges="keyboardHidden|orientation|screenSize"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="53dp"
                android:text="@string/profile_default_username"
                android:textSize="30sp"
                android:id="@+id/profileUsernameText" />

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_below="@+id/profileUsernameText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:saveEnabled="false"
                android:src="@drawable/ic_person_black_180dp_img_placeholder" />

            <Button
                android:id="@+id/chooseImageFromCameraButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/profileImageView"
                android:layout_alignStart="@+id/profileImageView"
                android:layout_below="@+id/profileImageView"
                android:layout_marginTop="29dp"
                android:onClick="chooseImageFromCamera"
                android:text="@string/choose_image_from_camera" />

            <Button
                android:id="@+id/chooseImageFromGalleryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/chooseImageFromCameraButton"
                android:layout_alignStart="@+id/chooseImageFromCameraButton"
                android:layout_below="@+id/chooseImageFromCameraButton"
                android:layout_marginTop="28dp"
                android:onClick="chooseImageFromGallery"
                android:text="@string/choose_image_from_gallery" />
        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/loadingSpinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="46dp" />


</RelativeLayout>