<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/new_topic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/hint_topic_name"
        android:inputType="textPersonName"
      />


    <ImageView
        android:id="@+id/newTopicImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/new_topic_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@drawable/placeholder" />

    <Button
        android:id="@+id/chooseImageFromCameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/newTopicImageView"
        android:layout_alignStart="@+id/newTopicImageView"
        android:layout_below="@+id/newTopicImageView"
        android:layout_marginTop="29dp"
        android:onClick="chooseImageFromCamera"
        android:text="Choose image from camera" />

    <Button
        android:id="@+id/chooseImageFromGalleryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/chooseImageFromCameraButton"
        android:layout_alignStart="@+id/chooseImageFromCameraButton"
        android:layout_below="@+id/chooseImageFromCameraButton"
        android:layout_marginTop="15dp"
        android:onClick="chooseImageFromGallery"
        android:text="Choose image from gallery" />

    <Button
        android:id="@+id/button_add_new_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseImageFromGalleryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Add new topic" />
</RelativeLayout>



